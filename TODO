Update email confirmation

mutation UpdateSiteSettings{
  shopSettingsUpdate(input:{
    enableAccountConfirmationByEmail: false
  }){
    shop{
      enableAccountConfirmationByEmail
    }
    errors{
      field
      message
    }
  }
}

--------------------------------------

Update order status using metadata

mutation UpdateOrderMetaData{
  updateMetadata(
    id:"T3JkZXI6MDQ5NzgwNGEtMzI5Ny00MDFkLThlOTAtYTk4YmFkOTJlYmNj",
    input:[
      {
        key:"statusDetails",
        value:"Sentence to be displayed."
      }
    ],
  ){
    item{
      __typename
      metadata{
        key
        value
      }
    }
  }
}

